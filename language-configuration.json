{
  "comments": {
    "lineComment": "#",
    "blockComment": ["#[[", "]]"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["$<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "$<", "close": ">" },
    { "open": "#[[", "close": "]]", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(if|foreach|while|function|macro|block)\\s*\\(",
      "end": "^\\s*(endif|endforeach|endwhile|endfunction|endmacro|endblock)\\s*\\("
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(if|elseif|else|foreach|while|function|macro|block)\\s*\\(",
    "decreaseIndentPattern": "^\\s*(endif|elseif|else|endforeach|endwhile|endfunction|endmacro|endblock)\\s*\\("
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
